n gesamtgesellschaftlich getragener und politisch gesteuerter Strukturwandel in der Krankenhausversorgung sowie ein verantwortungsvoller und dem Versorgungsauftrag entsprechender Umgang mit den knappen Ressourcen.","activityOperationType":"SELF_OPERATED","clientOrganizations":[],"clientPersons":[],"codexViolation":false,"disclosureRequirementsExist":false,"donationInformationRequired":false,"donators":[],"employeeCount":{"from":1,"to":10},"fieldsOfInterest":[{"code":"FOI_HEALTH","de":"Gesundheit","en":"Health"},{"code":"FOI_HEALTH|FOI_HEALTH_CARE","de":"Pflege","en":"Health care"},{"code":"FOI_HEALTH|FOI_HEALTH_OTHER","de":"Sonstiges im Bereich „Gesundheit“","en":"Other in the field of “Health”"},{"code":"FOI_HEALTH|FOI_HEALTH_PROMOTION","de":"Gesundheitsförderung","en":"Health promotion"},{"code":"FOI_HEALTH|FOI_HEALTH_SUPPLY","de":"Gesundheitsversorgung","en":"Health supply"}],"financialExpensesEuro":{"fiscalYearEnd":"12/20","fiscalYearStart":"01/20","from":90001,"to":100000},"id":928,"legislativeProjects":[],"lobbyistIdentity":{"address":{"city":"Berlin","country":{"code":"DE"},"type":"NATIONAL"},"identity":"ORGANIZATION","legalForm":{"code":"LF_EV","code_de":"Eingetragener Verein (e. V.)","code_en":"Registered association","type":"JURISTIC_PERSON"},"legalRepresentatives":[{"commonFirstName":"Matthias","function":"Vorsitzender des Vorstandes","lastName":"Bracht","organizationMemberEmails":["matthias.bracht@krh.de"],"phoneNumber":"+495119066100"},{"commonFirstName":"Eibo","function":"1. Stellvertretender Vorsitzender des Vorstandes","lastName":"Krahmer","organizationMemberEmails":["gf-finanzmanagement@vivantes.de"],"phoneNumber":"+4930130114001"},{"commonFirstName":"Thomas","function":"2. Stellvertrender Vorsitzender des Vorstandes","lastName":"Menzel","organizationMemberEmails":["thomas.menzel@klinikum-fulda.de"],"phoneNumber":"+49661845010"},{"commonFirstName":"Nils","function":"Geschäftsführer","lastName":"Dehne","organizationMemberEmails":["nils.dehne@akg-klin