beiten.\r\n","activityOperationType":"SELF_OPERATED","clientOrganizations":[],"clientPersons":[],"codexViolation":false,"disclosureRequirementsExist":false,"donationInformationRequired":false,"donators":[],"employeeCount":{"from":1,"to":10},"fieldsOfInterest":[{"code":"FOI_AGRICULTURE_FOOD|FOI_AF_OTHER","de":"Sonstiges im Bereich „Landwirtschaft und Ernährung“","en":"Other in the field of “Agriculture and food”"},{"code":"FOI_AGRICULTURE_FOOD","de":"Landwirtschaft und Ernährung","en":"Agriculture and food"},{"code":"FOI_HEALTH","de":"Gesundheit","en":"Health"},{"code":"FOI_HEALTH|FOI_HEALTH_PROMOTION","de":"Gesundheitsförderung","en":"Health promotion"},{"code":"FOI_HEALTH|FOI_HEALTH_SUPPLY","de":"Gesundheitsversorgung","en":"Health supply"},{"code":"FOI_SCIENCE_RESEARCH_TECHNOLOGY","de":"Wissenschaft, Forschung und Technologie","en":"Science, research and technology"}],"financialExpensesEuro":{"fiscalYearEnd":"12/20","fiscalYearStart":"01/20","from":1,"to":10000},"id":182,"legislativeProjects":[{"name":"DMP Adipositas"},{"name":"Ernährungsstrategie 2023"},{"name":"Präventionsgesetz"},{"name":"Nationaler Präventionsplan"},{"name":"Reduktionsstrategie Lebensmittel"}],"lobbyistIdentity":{"address":{"city":"Martinsried","country":{"code":"DE"},"type":"NATIONAL"},"identity":"ORGANIZATION","legalForm":{"code":"LF_EV","code_de":"Eingetragener Verein (e. V.)","code_en":"Registered association","type":"JURISTIC_PERSON"},"legalRepresentatives":[{"commonFirstName":"Jens","function":"Präsident","lastName":"Aberle","organizationMemberEmails":["aberle@uke.de"],"phoneNumber":"+4940428034449"},{"commonFirstName":"Tobias","function":"Sekretär und Schatzmeister","lastName":"Hofmann","organizationMemberEmails":["tobias.hofmann@charite.de"],"phoneNumber":"+4930450553567"},{"commonFirstName":"Sebastian","function":"Präsident elect und Vizepräsident","lastName":"Meyhöfer","organizationMemberEmails":["sebastian.meyhoefer@uni-luebeck.de"],"phoneNumber":"+4945150044142"},{"commonFirstName"