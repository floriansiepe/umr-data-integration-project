en und Gründern bestehender Strukturen ermöglichen.","activityOperationType":"SELF_OPERATED","clientOrganizations":[],"clientPersons":[],"codexViolation":false,"disclosureRequirementsExist":false,"donationInformationRequired":false,"donators":[],"employeeCount":{"from":1,"to":10},"fieldsOfInterest":[{"code":"FOI_HEALTH","de":"Gesundheit","en":"Health"},{"code":"FOI_HEALTH|FOI_HEALTH_OTHER","de":"Sonstiges im Bereich „Gesundheit“","en":"Other in the field of “Health”"},{"code":"FOI_HEALTH|FOI_HEALTH_PROMOTION","de":"Gesundheitsförderung","en":"Health promotion"},{"code":"FOI_HEALTH|FOI_HEALTH_SUPPLY","de":"Gesundheitsversorgung","en":"Health supply"},{"code":"FOI_SOCIAL_SECURITY","de":"Soziale Sicherung","en":"Social security"},{"code":"FOI_SOCIAL_SECURITY|FOI_SS_HEALTH","de":"Krankenversicherung","en":"Health insurance"}],"financialExpensesEuro":{"fiscalYearEnd":"12/20","fiscalYearStart":"01/20","from":50001,"to":60000},"id":3108,"legislativeProjects":[],"lobbyistIdentity":{"address":{"city":"Berlin","country":{"code":"DE"},"type":"NATIONAL"},"identity":"ORGANIZATION","legalForm":{"code":"LF_EV","code_de":"Eingetragener Verein (e. V.)","code_en":"Registered association","type":"JURISTIC_PERSON"},"legalRepresentatives":[{"commonFirstName":"Peter","function":"Vorstandsvorsitzender","lastName":"Velling","organizationMemberEmails":["p.velling@bmvz.de"],"phoneNumber":"+493027015950"},{"commonFirstName":"Verena","function":"stellv. Vorstandsvorsitzende","lastName":"Simon","organizationMemberEmails":["v.simon@bmvz.de"],"phoneNumber":"+493027015950"},{"commonFirstName":"Klaus","function":"stellv. Vorstandsvorsitzener","lastName":"Kleinertz","organizationMemberEmails":["k.kleinertz@bmvz.de"],"phoneNumber":"+493027015950"}],"members":286,"membersCountDate":"2022-02-01T00:00:00.000Z","membershipEntries":["DGVM"],"name":"BMVZ | Bundesverband Medizinische Versorgungszentren - Gesundheitszentren - Integrierte Versorgung e.V.","namedEmployees":[{"commonFirstName":"Susanne","lastNa