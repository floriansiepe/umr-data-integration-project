liche Institutionen gehören dem LAV-Netzwerk ebenso an wie Einzelpersonen.","activityOperationType":"SELF_OPERATED","clientOrganizations":[],"clientPersons":[],"codexViolation":false,"disclosureRequirementsExist":false,"donationInformationRequired":false,"donators":[],"employeeCount":{"from":1,"to":10},"fieldsOfInterest":[{"code":"FOI_DEVELOPMENT_POLICY","de":"Entwicklungspolitik","en":"Development policy"},{"code":"FOI_FOREIGN_AFFAIRS|FOI_FA_BRD","de":"Außenpolitik","en":"Foreign policy of the federal republic of Germany"},{"code":"FOI_FOREIGN_AFFAIRS|FOI_FA_CULTURE","de":"Auswärtige Kultur- und Bildungspolitik","en":"Foreign cultural and educational policy"},{"code":"FOI_FOREIGN_AFFAIRS|FOI_FA_INTERNATIONAL","de":"Internationale Beziehungen","en":"International relations"},{"code":"FOI_FOREIGN_AFFAIRS|FOI_FA_OTHER","de":"Sonstiges im Bereich „Außenpolitik und internationale Beziehungen“","en":"Other in the field of “Foreign policy and international relations”"},{"code":"FOI_FOREIGN_AFFAIRS","de":"Außenpolitik und internationale Beziehungen","en":"Foreign policy and international relations"},{"code":"FOI_FOREIGN_TRADE","de":"Außenwirtschaft","en":"Foreign trade"}],"financialExpensesEuro":{"fiscalYearEnd":"12/20","fiscalYearStart":"01/20","from":10001,"to":20000},"id":1442,"legislativeProjects":[],"lobbyistIdentity":{"address":{"city":"Hamburg","country":{"code":"DE"},"type":"NATIONAL"},"identity":"ORGANIZATION","legalForm":{"code":"LF_EV","code_de":"Eingetragener Verein (e. V.)","code_en":"Registered association","type":"JURISTIC_PERSON"},"legalRepresentatives":[{"commonFirstName":"Bodo","function":"Vorsitzender des Vorstandes","lastName":"Liesenfeld","organizationMemberEmails":["vorstand@lateinamerikaverein.de"],"phoneNumber":"+49404134313"},{"commonFirstName":"Pablo","function":"Vorstandsmitglied","lastName":"Garcia Camacho","organizationMemberEmails":["vorstand@lateinamerikaverein.de"],"phoneNumber":"+49404134313"},{"commonFirstName":"Arthur","function":"Vorstan